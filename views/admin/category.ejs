<!DOCTYPE html>
<html lang="en">
<%- include('./static/header') %>

<body>
  <div class="container-scroller">
    <%- include('./static/nav-bar') %>
    <div class="container-fluid page-body-wrapper">
      <%- include('./static/side-bar') %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <%- include('./static/flashMessage') %>
              <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <form class="forms-sample" action="" method="post">
                  <div class="form-group row">
                    <div class="col-sm-7">
                      <input type="text" name="name" class="form-control" placeholder="Category Name">
                    </div>
                    <button type="submit" class="btn btn-primary col-sm-2">Add</button>
                  </div>
                </form>
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Id</th>
                      <th>Category</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <% categories.forEach(category => { %>
                  <tbody>
                    <tr>
                      <td><%= category._id %></td>
                      <td><%= category.name %></td>
                      <td><% if (category.status) { %>
                        <label class="badge badge-success">Active</label></td>
                       <% } else { %>
                        <label class="badge badge-danger">Passive</label></td>
                      <% } %>
                      
                      <form id="delete" action="delete" method="post">
                        <td>
                          <input type="hidden" name="_id" value="<%= category._id %>">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </td>
                      </form>
                    </tr>
                  </tbody>
                  <% }) %>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
        <%- include('./static/footer') %>
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <%- include('./static/plugin') %>
</body>

</html>